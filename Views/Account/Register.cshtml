@model BookShop.ViewModels.RegisterViewModel
@{
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}

<main class="form-signin w-100 m-auto">
    <img class="mb-6 logo" src="~/images/logo.png" alt="" style="height: 90px;">
    <h1 class="h3 mb-3 fw-normal align-content-center" style="text-align:center">Регистрация</h1>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" placeholder="name@example.com"/>
            <label asp-for="Email">Почта</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Login" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Login">Имя пользователя</label>
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password">Придумайте пароль</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PasswordConfirm" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="PasswordConfirm">Повторите пароль</label>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <input class="btn btn-primary w-100 py-2" type="submit">Зарегистрироваться</input>
    </form>
</main>
<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
